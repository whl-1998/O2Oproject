<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whl.o2o.dao.ProductCategoryDao">
    <select id="queryProductCategoryList" resultType="com.whl.o2o.entity.ProductCategory" parameterType="Long">
        select
        product_category_id,
        product_category_name,
        priority,
        create_time,
        shop_id
        from tb_product_category
        <where>
            shop_id = #{shopId}
        </where>
        order by priority DESC
    </select>
</mapper>